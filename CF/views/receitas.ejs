<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Panela Siarense</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/receitas.css" rel="stylesheet" type="text/css" />
</head>

<body>


  <div class="container mt-3">
    <% if (receita != null) { %>
    <header class="container-fluid bg-light py-3">
      <div class="row align-items-center">
        <div class="col-2">
          <a class="btn btn-primary" href="/"><i class="fa fa-arrow-circle-left"  style=' color:black'  aria-hidden="true"></i></a>
        </div>
        <div class="col-8 text-center">
          <h1> <img src="/img/Logo.jpg" alt="Logo" class="logo"> Panela Siarense</h1>
        </div>
        <div class="col-2 text-end">
          <a class="btn btn-primary" href="/auth/profile" id ="user"><i class="fa fa-user-circle profile-icon" aria-hidden="true"></i></a>
        </div>
      </div>
    </header>
    <div class="row">
      <div class="col-md-6">
        <img src="/img/<%= receita.img %>" alt="Imagem da Receita" class="cuscuz">
      </div>
      <div class="col-md-6" id="descricao">
        <h2 id="title"><%= receita.titulo %></h2>
        <p id='text'><%= receita.descricao %></p>
      </div>
    </div>
    
    <div class="row mt-3">
      <div class="col-md-6">
        <h2>Ingredientes</h2>
        <ul>
          <% receita.ingredientes.split('.').forEach(function(ingrediente) { %>
            <li><%= ingrediente %></li>
          <% }) %>
        </ul>
      </div>
      <div class="col-md-6">
        <h2>Modo de Preparo</h2>
        <ol>
          <% receita.preparo.split('.').forEach(function(etapa) { %>
            <li><%= etapa %></li>
          <% }) %>
        </ol>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-8">
        <h2>Comentários: </h2>
        <% receita.comentarios.forEach(function(comentario) { %>

        <div class="comment" id="comment1">
          <h4 id="duda"><i class="fa fa-user-circle user-icon"  aria-hidden="true"></i> <%= comentario.usuario ? comentario.usuario.name : 'Guest' %></h4>
          <p id="dudsz"><%= comentario.comentario %></p>
        </div>
        <% }) %>
      </div>
    </div>
        <form action="/produto/receitas/<%= encodeURIComponent(receita.titulo) %>/comentarios" method="POST">
          <div class="mb-3">
            <label for="comentario" class="form-label">Comentário:</label>
            <textarea class="form-control" id="comentario" name="comentario" rows="3" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Comentar</button>
        </form>
    
        
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>
  <footer  class="container-fluid mt-5 py-3 footer">
    <%- include('./partials/footer') %>
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>